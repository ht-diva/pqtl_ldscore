from snakemake.utils import min_version
from pathlib import Path

##### set minimum snakemake version #####
min_version("8.4.1")

configfile: "config/config.yaml"

include: "rules/common.smk"

rule all:
    input:
        expand(ws_path("ld/chr{chrom}.l2.M"), chrom=range(1, 23)),
        expand(ws_path("ld/chr{chrom}.l2.M_5_50"), chrom=range(1, 23)),
        expand(ws_path("ld/chr{chrom}.l2.ldscore.gz"), chrom=range(1, 23)),
        expand(ws_path("ld/chr{chrom}.log"), chrom=range(1, 23)),
        expand(ws_path("{seqid}/seq.{seqid}.gwaslab.P.tsv"), seqid=analytes.seqid),
        expand([
            ws_path("{seqid}/seq.{seqid}.munged.log"),
            ws_path("{seqid}/seq.{seqid}.munged.sumstats.gz")
        ], seqid=analytes.seqid),
        expand(ws_path("{seqid}/seq.{seqid}_h2.log"), seqid=analytes.seqid),
        ws_path("heritability_info.txt")

rule compute_ld:
    input:
        get_inputs
    output:
        ws_path("ld/chr{chrom}.l2.M"),
        ws_path("ld/chr{chrom}.l2.M_5_50"),
        ws_path("ld/chr{chrom}.l2.ldscore.gz"),
        ws_path("ld/chr{chrom}.log"),
    params:
        bfile=get_inputs_stem,
        ld_window=config["ldsc_dict"]["window"]
    conda:
        "envs/ldsc.yml"
    resources:
        runtime=lambda wc, attempt: attempt * 60,
    shell:
        """
        ldsc.py \
        --out {wildcards.chrom} \
        --bfile {params.bfile} \
        --l2 \
        --ld-window-kb {params.ld_window}
        """

