rule append_pvalue:
    input:
        sumstats_path,
    output:
        ws_path("{seqid}/seq.{seqid}.gwaslab.P.tsv")
    shell:
        """
        zcat {input} | \
        awk 'BEGIN{{OFS="\t"}} {{print $0, (NR==1 ? "P" : 10^(-$13))}}' > {output}
        """


rule munge_sum_stat:
    input:
        ws_path("{seqid}/seq.{seqid}.gwaslab.P.tsv"),
    output:
        ws_path("{seqid}/seq.{seqid}.munged.log"),
        ws_path("{seqid}/seq.{seqid}.munged.sumstats.gz"),
    conda:
        "envs/ldsc.yml"
    resources:
        runtime=lambda wc, attempt: attempt * 60,
    shell:
        """
        munge_sumstats.py --sumstats {input} \
        --N-col N --a1 EA --a2 NEA --frq EAF --p P --snp SNPID --out {output[0]}
        """


rule compute_ldscore:
    input:
        ws_path("{seqid}/seq.{seqid}.munged.sumstats.gz"),
        expand(
            ws_path("ld/chr{chrom}.{ext}"),
            chrom=[i for i in range(1,23)],
            ext=[".l2.M", ".l2.M_5_50", ".l2.ldscore.gz", "log"]
        )
    output:
        ws_path("{seqid}/seq.{seqid}_h2.log"),
    conda:
        "envs/ldsc.yml"
    resources:
        runtime= lambda wc,attempt: attempt * 60,
    params:
        munge=ws_path("{seqid}/seq.{seqid}.munged.sumstats.gz"),
        ld=ws_path("ld/chr@"),
    shell:
        """
        ldsc.py --h2 {input} --ref-ld-chr {params.ld} --w-ld-chr {params.ld} --out {output}
    """

rule merge_h2_info:
    input:
        expand(ws_path("{seqid}/seq.{seqid}_h2.log"), seqid=analytes.seqid),
    output:
        ws_path("heritability_info.txt")
    shell:
        """
        for f in {input}; do
            h2_line=$(grep "Total observed scale h2:" "$f" | sed 's/.*Total Observed scale h2: //')
            lambda_gc_line=$(grep "Lambda GC:" "$f" | sed 's/.*Lambda GC: //')
            mean_chi2_line=$(grep "Mean Chi\\^2:" "$f" | sed 's/.*Mean Chi\\^2: //')
            intercept_line=$(grep "Intercept:" "$f" | sed 's/.*Intercept: //')
            echo -e "$(basename $f)\\t$h2_line\\t$lambda_gc_line\\t$mean_chi2_line\\t$intercept_line"
        done > {output}
        """
        
